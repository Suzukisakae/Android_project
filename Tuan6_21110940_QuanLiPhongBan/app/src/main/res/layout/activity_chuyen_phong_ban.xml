<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ChuyenPhongBanActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn phòng ban để chuyển"
        android:background="@color/main_color_dark"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:id="@+id/textView1"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lvphongban"
        android:layout_weight="3"/>
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="20dp"

        android:id="@+id/imapply"
        android:layout_gravity="center"
        android:contentDescription="Thiết lập"
        android:src="@drawable/apply"/>

</LinearLayout>